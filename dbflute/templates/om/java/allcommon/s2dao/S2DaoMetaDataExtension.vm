    protected void handleBatchUpdateResultWithOptimisticLock(Object[] args, Object result, Method method) {
        if (args.length == 0) {
            return;// for Safety!
        }
        if (result instanceof int[]) {
            final int[] updatedCountArray = (int[])result;
            int index = 0;
            for (int updatedCount : updatedCountArray) {
                if (updatedCount == 0) {
                    if (args.length <= index) {
                        return;// for Safety!
                    }
                    if (isNonstrictMethod(method)) {
                        throw new ${glPackageBaseCommonException}.${glEntityAlreadyDeletedException}("The entity=" + args[index]);
                    } else {
                        throw new ${glPackageBaseCommonException}.${glEntityAlreadyUpdatedException}(args[index], updatedCount);
                    }
                }
            }
        }
    }

